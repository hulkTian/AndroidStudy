<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="1dp"
    android:paddingEnd="1dp">

    <TextView
        android:id="@+id/tv_column_one"
        style="@style/TextCell"
        app:layout_constraintBottom_toBottomOf="@+id/tv_column_two"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_column_two"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_column_two"
        style="@style/TextCell"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_column_one"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_line_top"
        style="@style/TabRowLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_line_bottom"
        style="@style/TabRowLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/v_line_spilt"
        style="@style/TabColumnLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/tv_column_one"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        style="@style/TabColumnLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/tv_column_one"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        style="@style/TabColumnLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
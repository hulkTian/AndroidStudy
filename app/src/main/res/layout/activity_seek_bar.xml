<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SeekBar
        android:id="@+id/sb_scale"
        android:layout_width="0dp"
        android:layout_height="113dp"
        android:background="@color/white"
        android:paddingTop="28dp"
        android:progressBackgroundTint="#999999"
        android:progressTint="#00BABE"
        android:thumb="@mipmap/ic_seek_thumb"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_scale"
        android:layout_width="23dp"
        android:layout_height="27dp"
        android:layout_marginBottom="50dp"
        android:background="@mipmap/bg_question_level"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/sb_scale"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>